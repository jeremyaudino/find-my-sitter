<p id="notice"><%= notice %></p>

<h1>Sitters</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>City</th>
      <th>State</th>
      <th>Mobile number</th>
      <th>Rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sitters.each do |sitter| %>
      <tr>
        <td><%= sitter.first_name %></td>
        <td><%= sitter.last_name %></td>
        <td><%= sitter.city %></td>
        <td><%= sitter.state %></td>
        <td><%= sitter.mobile_number %></td>
        <td><%= sitter.rate %></td>
        <td><%= link_to 'Show', sitter %></td>
        <td><%= link_to 'Edit', edit_sitter_path(sitter) %></td>
        <td><%= link_to 'Destroy', sitter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sitter', new_sitter_path %>
